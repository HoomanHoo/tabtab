<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Search">
    <select id="getCount" resultType="int">
        select count(*) from medi_information
        where medi_name like '%' || #{keyword} || '%' or chief_ingre like '%' || #{keyword} || '%'
    </select>
    
    <select id="getSearch" parameterType="map" resultType="search.SearchDataBean">
        select mi.medi_name, mi.supply_value, mi.selling_price, mi.manu_com, mi.chief_ingre, mv.vari_code
        from medi_information mi, medi_variation mv
        where mi.medi_code= mv.medi_code 
    </select>
    
    <select id="getSearchList" parameterType="map" resultType="search.SearchDataBean">   
        select*from(select rownum r,  mi.medi_name, mi.supply_value, mi.selling_price, mi.manu_com, mi.chief_ingre, mv.vari_code 
		from medi_information mi, medi_variation mv 
		join medi_variation on mi.medi_code=mv.medi_code 
		where (mi.medi_name like '%' || #{keyword}||'%' or mi.chief_ingre like '%' || #{keyword} ||'%')
		order by mi.medi_name desc)
		where r &gt;=#{start} and r &lt;=#{end} 	
    </select>
    
